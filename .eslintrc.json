{
  "root": true,
  "plugins": ["@nx"],
  "extends": [
    "plugin:@nx/typescript",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended",
    "plugin:unicorn/all",
    "plugin:prettier/recommended"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript", "plugin:@typescript-eslint/strict"],
      "rules": {
        "curly": "error",
        "eqeqeq": "error",
        "camelcase": "error",
        "complexity": ["error", 10],
        "radix": "error",
        "max-depth": ["error", 4],
        "no-console": "warn",
        "max-params": ["error", 8],
        "no-magic-numbers": ["error", { "ignore": [0, 1] }],
        "unicorn/prevent-abbreviations": ["error", { "ignore": ["e2e", "props"] }],
        "@typescript-eslint/no-extraneous-class": ["error", { "allowEmpty": true }]
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": { "no-magic-numbers": "off", "max-lines-per-function": "off" }
    },
    {
      "files": ["*.json"],
      "extends": ["plugin:@nx/javascript"],
      "rules": { "unicorn/prevent-abbreviations": "off" }
    }
  ]
}
