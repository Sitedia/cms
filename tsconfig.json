{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "strict": true,
    "composite": true,
    "rootDir": "./",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "#libs/common": ["libs/common/src/index.js"]
    }
  },
  "references": [{ "path": "./libs/common/tsconfig.build.json" }, { "path": "./apps/backend/tsconfig.build.json" }]
}
