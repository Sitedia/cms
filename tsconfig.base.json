{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2022"],
    "module": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "paths": {
      "#my-events/nestjs-common": ["libs/nestjs-common/src/index.js"]
    }
  }
}
