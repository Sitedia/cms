{
  "name": "CMS",

  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "mounts": ["source=${devcontainerId}-node_modules,target=${containerWorkspaceFolder}/node_modules,type=volume"],

  "postCreateCommand": "bash ./.devcontainer/post-install.sh",

  "customizations": {
    "vscode": {
      "settings": {
        "workbench.tree.indent": 16,
        "workbench.iconTheme": "vscode-icons",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.addMissingImports": "explicit",
          "source.organizeImports": "explicit",
          "source.fixAll": "explicit"
        },
        "scm.defaultViewMode": "tree",
        "[dockerfile]": {
          "editor.defaultFormatter": "ms-azuretools.vscode-docker"
        },
        "search.exclude": {
          "dist/**": true
        },
        "vsicons.associations.files": [
          { "icon": "vscode", "extensions": ["extensions.json", "settings.json"], "filename": true, "format": "svg" },
          { "icon": "nx", "extensions": ["project.json"], "filename": true, "format": "svg" }
        ],
        "testing.openTesting": "neverOpen",
        "jest.runMode": "on-demand",
        "rest-client.previewColumn": "current",
        "rest-client.previewOption": "body",
        "cSpell.words": ["BUILDKIT", "nestjs", "nrwl", "camelcase", "vsicons", "devcontainer", "devcontainers"]
      },
      "extensions": [
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "vscode-icons-team.vscode-icons",
        "orta.vscode-jest",
        "mhutchie.git-graph",
        "yzhang.markdown-all-in-one",
        "christian-kohler.npm-intellisense",
        "nrwl.angular-console",
        "humao.rest-client",
        "streetsidesoftware.code-spell-checker"
      ],
    }
  }
}
