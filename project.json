{
  "name": "source",
  "$schema": "./node_modules/nx/schemas/project-schema.json",
  "tags": ["source"],
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint . --fix"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --coverage"
      }
    },
    "test:report": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python3 -m http.server --directory ./coverage/lcov-report 8000"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --build tsconfig.build.json"
      }
    }
  }
}
