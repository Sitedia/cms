{
  "name": "apps/backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": ["backend"],
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint ./apps/backend -c ./eslint.config.js"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --rootDir ./apps/backend -c ./jest.config.js"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --rootDir ./apps/backend -c ./jest.config.js --coverage --coverageDirectory ../../coverage/apps/backend"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nest start --watch --sourceRoot apps/backend/src",
        "cwd": "apps/backend",
        "env": { "NODE_ENV": "development" }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nest build -p ./apps/backend/tsconfig.build.json"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ./dist/apps/backend/src/main.js"
      },
      "dependsOn": ["build"]
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build . -f apps/backend/Dockerfile -t backend --no-cache",
        "env": { "DOCKER_BUILDKIT": "1" }
      }
    },
    "docker:start": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "echo 'Delete the previous container if exists ..'",
          "docker rm -f backend",
          "echo 'Create the container ...'",
          "docker run --env-file apps/backend/.env.docker --name backend -p 8801:3000 backend"
        ],
        "parallel": false
      }
    }
  }
}
