{
  "name": "apps/backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": ["backend"],
  "targets": {
    "clear": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rimraf dist coverage",
        "cwd": "apps/backend"
      }
    },
    "clear:all": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rimraf dist coverage env.*.local node_modules",
        "cwd": "apps/backend"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/backend/**/*.{ts,tsx,js,jsx}", "apps/backend/package.json"]
      }
    },
    "lint:api": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nest start --entryFile apps/backend/src/cli -- swagger | npx spectral lint --ruleset ../../spectral.yaml",
        "cwd": "apps/backend"
      }
    },
    "test:coverage": {
      "executor": "@nx/jest:jest",
      "outputs": ["{options.outputFile}"],
      "options": {
        "jestConfig": "apps/backend/jest.config.js",
        "codeCoverage": true,
        "runInBand": true
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nest build",
        "cwd": "apps/backend"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nest start --watch",
        "cwd": "apps/backend",
        "env": {
          "NODE_ENV": "development"
        }
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nest start",
        "cwd": "apps/backend"
      },
      "dependsOn": ["build"]
    },
    "start:prod": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/apps/backend/src/main.js",
        "cwd": "apps/backend"
      },
      "dependsOn": ["build"]
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "DOCKER_BUILDKIT=1 docker build . -f apps/backend/Dockerfile -t backend --no-cache --build-arg=\"APP_VERSION={args.appVersion}\""
      }
    },
    "docker:start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Delete the previous container if exists ..' && docker rm -f backend && echo 'Create the container ...' && docker run --name backend -p 3000:3000 backend"
      }
    }
  }
}
