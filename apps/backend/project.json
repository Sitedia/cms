{
  "name": "apps/backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "tags": ["apps/backend"],
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint ./apps/backend -c ./eslint.config.js"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest -c ./apps/backend/jest.config.js"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest -c ./apps/backend/jest.config.js --coverage"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest -c ./apps/backend/jest.config.js --watch"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --build ./apps/backend/tsconfig.build.json"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nest start --watch --sourceRoot apps/backend/src",
        "cwd": "apps/backend",
        "env": { "NODE_ENV": "development", "APP_LOG_LEVEL": "debug" }
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ./dist/apps/backend/src/main.js"
      },
      "dependsOn": ["build"]
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build . -f apps/backend/Dockerfile -t backend --no-cache",
        "env": { "DOCKER_BUILDKIT": "1" }
      }
    },
    "docker:test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "echo 'Delete the previous container if exists ..'",
          "docker rm -f backend",
          "echo 'Create the container ...'",
          "docker run --name backend -p 8801:3000 -e APP_LOG_FORMAT -e APP_API_URL backend"
        ],
        "parallel": false,
        "env": { "APP_LOG_FORMAT": "JSON", "APP_API_URL": "http://localhost:8801" }
      }
    }
  }
}
