{
  "name": "apps/backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": ["backend"],
  "targets": {
    "clear": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["rimraf dist coverage src/openapi.yaml"],
        "cwd": "apps/backend"
      }
    },
    "clear:all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["rimraf dist coverage src/openapi.yaml .env.*.local node_modules"],
        "cwd": "apps/backend"
      }
    },
    "lint:api": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nest start",
          "spectral lint ./dist/apps/backend/src/openapi.yaml --ruleset ../../spectral.yaml --fail-on-unmatched-globs"
        ],
        "cwd": "apps/backend",
        "env": {
          "APP_MODE": "SWAGGER"
        },
        "parallel": false
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/backend/jest.config.js",
        "verbose": true,
        "runInBand": true
      },
      "dependsOn": ["clear"]
    },
    "test:watch": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/backend/jest.config.js",
        "runInBand": true,
        "watch": true
      },
      "dependsOn": ["clear"]
    },
    "test:coverage": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/backend/jest.config.js",
        "codeCoverage": true,
        "verbose": true,
        "runInBand": true
      },
      "dependsOn": ["clear"]
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nest build"],
        "cwd": "apps/backend"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nest start --watch"],
        "cwd": "apps/backend",
        "env": {
          "NODE_ENV": "development"
        }
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nest start"],
        "cwd": "apps/backend"
      },
      "dependsOn": ["build"]
    },
    "start:prod": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["node dist/apps/backend/src/main.js"],
        "cwd": "apps/backend"
      },
      "dependsOn": ["build"]
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "DOCKER_BUILDKIT=1 docker build . -f apps/backend/Dockerfile -t backend --no-cache --build-arg=\"APP_VERSION={args.appVersion}\""
        ]
      }
    },
    "docker:start": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "echo 'Delete the previous container if exists ..' && docker rm -f backend && echo 'Create the container ...' && docker run --name backend -p 3000:3000 backend"
        ],
        "parallel": false
      }
    }
  }
}
