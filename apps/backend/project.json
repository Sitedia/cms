{
  "name": "apps/backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "tags": ["apps/backend"],
  "targets": {
    "prettify": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier ./apps/backend --write --log-level warn"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint ./apps/backend --fix"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest ./apps/backend --collectCoverageFrom='[\"./apps/backend/src/app/**/*.ts\"]'"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --build ./apps/backend/tsconfig.build.json"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsc --build apps/backend/tsconfig.build.json --watch",
          "node --watch dist/apps/backend/main.js --inspect"
        ],
        "env": { "NODE_ENV": "development", "APP_LOG_LEVEL": "debug" }
      },
      "dependsOn": ["build"]
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ./dist/apps/backend/main.js"
      },
      "dependsOn": ["build"]
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build . -f apps/backend/Dockerfile -t backend --no-cache",
        "env": { "DOCKER_BUILDKIT": "1" }
      },
      "cache": true
    },
    "docker:start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker run --name backend -p 8801:3000 --env-file apps/backend/.env.docker.local backend"
      },
      "dependsOn": ["docker:build", "docker:remove"]
    },
    "docker:remove": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker rm -f backend"
      }
    }
  }
}
