{
  "extends": ["../../.eslintrc.base.json"],
  "ignorePatterns": ["node_modules", "dist", "coverage", "jest.config.ts", "dotenv.config.js"],
  "overrides": [
    {
      "files": ["*.ts", "*.js"],
      "settings": {
        "import/resolver": {
          "typescript": { "project": ["apps/backend/tsconfig.json"] },
          "node": { "project": ["apps/backend/tsconfig.json"] }
        }
      },
      "env": {
        "jest/globals": true
      },
      "parserOptions": {
        "project": ["apps/backend/tsconfig.json"]
      }
    }
  ]
}
