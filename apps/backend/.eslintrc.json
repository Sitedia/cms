{
  "extends": ["../../.eslintrc.base.json"],
  "ignorePatterns": ["node_modules", "dist", "coverage", "jest.config.js", "dotenv.config.js"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": { "project": ["apps/backend/tsconfig.json"] }
    },
    {
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/dependency-checks": [
          "error",
          {
            "ignoredFiles": ["**/*.spec.ts"],
            "ignoredDependencies": ["dotenv"],
            "includeTransitiveDependencies": true
          }
        ]
      }
    }
  ]
}
