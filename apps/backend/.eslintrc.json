{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["node_modules", "dist", "coverage", "jest.config.js"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": {
        "project": ["apps/backend/tsconfig.*?.json"]
      },
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/dependency-checks": [
          "error",
          { "ignoredDependencies": ["@nestjs/testing", "supertest", "@nestjs/platform-express"] }
        ]
      }
    }
  ]
}
