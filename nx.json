{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "lint": { "cache": true },
    "test": { "cache": true },
    "test:coverage": { "cache": true },
    "serve": { "dependsOn": ["clear"] },
    "build": { "dependsOn": ["clear"] }
