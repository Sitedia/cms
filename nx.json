{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "lint": { "cache": true },
    "test": { "cache": true },
    "test:coverage": { "cache": true },
    "build": { "cache": true }
  },
  "release": {
    "projects": ["*"],
    "version": { "conventionalCommits": true },
    "changelog": { "workspaceChangelog": { "renderOptions": { "authors": false } } }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    }
  ]
}
