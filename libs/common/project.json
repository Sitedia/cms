{
  "name": "libs/common",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/common/src",
  "projectType": "library",
  "tags": ["common"],
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint ./libs/common -c ./eslint.config.js"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --rootDir ./libs/common -c ./jest.config.js"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --rootDir ./libs/common -c ./jest.config.js --coverage --coverageDirectory ../../coverage/libs/common"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p ./libs/common/tsconfig.build.json"
      }
    }
  }
}
