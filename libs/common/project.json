{
  "name": "libs/common",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/common/src",
  "projectType": "library",
  "tags": ["libs/common"],
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint ./libs/common -c ./eslint.config.js"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest -c ./libs/common/jest.config.js"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest -c ./libs/common/jest.config.js --coverage"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest -c ./libs/common/jest.config.js --watch"
      }
    },

    "test:report": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python3 -m http.server --directory coverage/libs/common/lcov-report 8000"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --build ./libs/common/tsconfig.build.json"
      }
    }
  }
}
