{
  "name": "libs/common",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/common/src",
  "projectType": "library",
  "tags": ["common"],
  "targets": {
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["eslint . -c ../../eslint.config.js"],
        "cwd": "libs/common"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["jest --rootDir . -c ../../jest.config.js --verbose"],
        "cwd": "libs/common"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "jest --rootDir . -c ../../jest.config.js --coverage --coverageDirectory ../../coverage/libs/common"
        ],
        "cwd": "libs/common"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc",
        "cwd": "libs/common"
      }
    }
  }
}
