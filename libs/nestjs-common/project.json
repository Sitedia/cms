{
  "name": "libs/nestjs-common",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/nestjs-common/src",
  "projectType": "library",
  "tags": ["nestjs-common"],
  "targets": {
    "clear": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rimraf dist coverage",
        "cwd": "libs/nestjs-common"
      }
    },
    "clear:all": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rimraf dist coverage node_modules",
        "cwd": "libs/nestjs-common"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint . -c ./.eslintrc.json --fix",
        "cwd": "apps/backend"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "libs/nestjs-common/jest.config.js",
        "verbose": true
      },
      "dependsOn": ["clear"]
    },
    "test:watch": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "libs/nestjs-common/jest.config.js",
        "watch": true
      },
      "dependsOn": ["clear"]
    },
    "test:coverage": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "libs/nestjs-common/jest.config.js",
        "codeCoverage": true,
        "verbose": true
      },
      "dependsOn": ["clear"]
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nest build",
        "cwd": "libs/nestjs-common"
      }
    }
  }
}
