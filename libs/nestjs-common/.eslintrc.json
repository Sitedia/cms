{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["node_modules", "dist", "coverage", "jest.config.js"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parserOptions": {
        "project": ["libs/nestjs-common/tsconfig.json"]
      }
    },
    {
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/dependency-checks": [
          "error",
          { "ignoredDependencies": ["tslib"], "ignoredFiles": ["**/*.spec.ts"], "checkVersionMismatches": false }
        ],
        "jest/unbound-method": "off"
      }
    }
  ]
}
