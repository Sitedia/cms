{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/strict",
    "plugin:@nx/typescript",
    "plugin:import/recommended",
    "plugin:jest/all",
    "plugin:unicorn/all",
    "plugin:prettier/recommended"
  ],
  "plugins": ["@nx"],
  "settings": {
    "import/resolver": {
      "typescript": { "project": ["tsconfig.base.json"] },
      "node": { "project": ["tsconfig.base.json"] }
    }
  },
  "rules": {
    "camelcase": "error",
    "complexity": ["error", 20],
    "curly": "error",
    "eqeqeq": "error",
    "max-depth": ["error", 4],
    "max-params": ["error", 8],
    "no-console": "warn",
    "no-magic-numbers": ["error", { "ignore": [0, 1] }],
    "radix": "error",
    "unicorn/prevent-abbreviations": ["error", { "ignore": ["app", "e2e", "props", "moduleRef"] }],
    "jest/require-hook": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/no-extraneous-class": ["error", { "allowEmpty": true }],
    "@nx/enforce-module-boundaries": ["error"]
  },
  "overrides": [
    {
      "files": ["*.spec.ts", "*.spec.tsx"],
      "env": { "jest": true },
      "rules": { "jest/require-hook": ["error"] }
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.dto.ts", "*.entity.ts"],
      "env": { "jest": true },
      "rules": { "no-magic-numbers": "off" }
    },
    {
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "jest/unbound-method": "off",
        "@nx/dependency-checks": [
          "error",
          {
            "ignoredFiles": ["**/*.spec.ts"],
            "ignoredDependencies": ["dotenv"],
            "includeTransitiveDependencies": true
          }
        ]
      }
    }
  ]
}
