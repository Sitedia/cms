{
  "root": true,
  "ignorePatterns": ["dist", "coverage", "dotenv.config.js", "jest.config.ts"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended-type-checked",
        "plugin:@typescript-eslint/stylistic-type-checked",
        "plugin:@nx/typescript",
        "plugin:import/recommended",
        "plugin:jest/all",
        "plugin:unicorn/all"
      ],
      "rules": {
        "camelcase": "error",
        "curly": "error",
        "eqeqeq": "error",
        "complexity": ["error", 20],
        "max-depth": ["error", 4],
        "max-params": ["error", 8],
        "no-console": "warn",
        "no-magic-numbers": ["error", { "ignore": [0, 1] }],
        "radix": "error",
        "unicorn/prevent-abbreviations": ["error", { "ignore": ["app", "e2e", "props", "moduleRef"] }],
        "@nx/enforce-module-boundaries": ["error"],
        "jest/require-hook": "off"
      }
    },
    {
      "files": ["*.spec.ts"],
      "rules": { "jest/require-hook": ["error"] }
    },
    {
      "files": ["*.spec.ts", "*.dto.ts", "*.entity.ts"],
      "rules": { "no-magic-numbers": "off" }
    },
    {
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/dependency-checks": [
          "error",
          {
            "ignoredFiles": ["**/*.spec.ts"],
            "ignoredDependencies": ["dotenv", "#my-events/nestjs-common"],
            "includeTransitiveDependencies": true
          }
        ]
      }
    }
  ]
}
